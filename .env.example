# ====================================
# PoshPOULE Farms - Environment Variables
# ====================================
# Copy this file to .env and update the values
# NEVER commit .env to version control

# Application Environment
# App Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development  # development, staging, or production
NEXT_PUBLIC_SITE_URL=https://poshpoule-farms.vercel.app  # Your deployed Vercel URL

# Authentication
NEXTAUTH_SECRET=j0BuPeBhPxueIeNRJyRoqkZm+g5WBQzPKovDYBCYXEg=  # Generate with `openssl rand -base64 32`
NEXTAUTH_URL=https://poshpoule-farms.vercel.app  # Must match your Vercel domain

# Database (PostgreSQL for Neon)
DATABASE_URL="postgresql://your-username:your-password@your-host.neon.tech/your-database?sslmode=require"  # Replace with your Neon URL

# Email Configuration (for Nodemailer in production)
SMTP_HOST=smtp.gmail.com  # Or your provider (e.g., SendGrid)
SMTP_PORT=587  # Or 465 for SSL
SMTP_USER=your-email@gmail.com  # Your email
SMTP_PASS=your-app-password  # Gmail app password, not regular password
ORDER_NOTIFICATIONS_EMAIL=your-email@gmail.com  # Where to send order emails
ORDER_EMAIL_FROM=noreply@poshpoules.com  # From address for emails

# Caching & Performance
# ---------------------------
NEXT_PUBLIC_ENABLE_CACHE=true
CACHE_TTL=3600

# Analytics (optional)
# ---------------------------
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXX-X
# FACEBOOK_PIXEL_ID=XXXXXXXXXXXXXXX

# Security Headers
# ---------------------------
NEXT_PUBLIC_ENABLE_CSP=true
NEXT_PUBLIC_ENABLE_HSTS=true

# ====================================
# Production Checklist
# ====================================
# 1. Set NODE_ENV=production
# 2. Set NEXT_PUBLIC_APP_ENV=production
# 3. Generate new NEXTAUTH_SECRET
# 4. Update DATABASE_URL with production credentials
# 5. Configure SMTP for production emails
# 6. Verify all URLs are HTTPS in production
# 7. Review all security headers
# ====================================
